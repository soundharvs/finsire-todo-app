<p id="notice"><%= notice %></p>

<h1>To-Do's</h1>
<table class="table table-bordered">

  <tbody>
    <% @lists.each do |list| %>

      <% if list.completed %>

      <tr class="table-secondary">
        <td class="striker"><strong><%= list.description %></strong></td>
        <td><%= link_to 'Edit', edit_list_path(list), class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Delete', list, class: "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

      <% else %>

        <tr>
        <td><strong><%= list.description %></strong></td>
        <td><%= link_to 'Edit', edit_list_path(list), class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Delete', list, class: "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Task', new_list_path, class:"btn btn-primary" %>
